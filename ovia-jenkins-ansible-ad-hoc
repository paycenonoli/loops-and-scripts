pipeline{
    agent any
    environment{
        cred = credentials('ovia-ssh-keys')
    }
    stages{
        stage('Checkout'){
            steps{
                checkout scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/paycenonoli/ovia-ansible-jenkins.git']])
            }
        }
        stage('Ansible test'){
            steps{
                sh "ansible all -i inventory -m ping --private-key=${cred}"
            }
        }
    }
}


# Inventory File From Charles_NewEra
<server_name/public_ip> ansible_ssh_private_key_files=<path_to_pem_key> ansible_ssh_common_args='-o StrictHostKeyChecking=no'

# Inventory File from ovia-gupta
[all:vars]
ansible_ssh_common_args='-o StrictHostKeyChecking=no'

