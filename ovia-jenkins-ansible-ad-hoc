pipeline{
    agent any
    environment{
        cred = credentials('ovia-ssh-keys')
    }
    stages{
        stage('Checkout'){
            steps{
                checkout scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/paycenonoli/ovia-ansible-jenkins.git']])
            }
        }
        stage('Ansible test'){
            steps{
                sh "ansible all -i inventory -m ping --private-key=${cred}"
            }
        }
    }
}