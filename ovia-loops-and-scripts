pipeline{
    agent any
    stages{
        stage("Script checkout"){
            steps{
                checkout scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/paycenonoli/loops-and-scripts.git']])
            }
        }
        stage('Script usage'){
            steps{
                script{
                    def values = ['uat' , 'dev' , 'prod']
                    sh 'chmod +x helloworld.sh'
                    for (name in values) {
                        sh "sh helloworld.sh ${name}" 
                    }
                }
            }
        }
    }
}